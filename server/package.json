
{
  "name": "learnify-microservices",
  "version": "1.0.0",
  "description": "Backend microservices untuk aplikasi Learnify",
  "scripts": {
    "start:dashboard": "cd dashboard && npm start",
    "start:questions": "cd questions && npm start",
    "start:creator": "cd creator && npm start",
    "start:api-gateway": "cd api-gateway && npm start",
    "start:all": "concurrently \"npm run start:dashboard\" \"npm run start:questions\" \"npm run start:creator\" \"npm run start:api-gateway\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
